<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pages.Profile">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/inter_semibold"
            android:text="My Account"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="123dp"
        android:layout_height="107dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="Le Quang Hoa"
            android:textColor="@color/course_title"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/useremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="lqhoa@gmail.com"
            android:textColor="@color/course_title"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/username" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/useremail" >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/roboto_light_italic"
            android:gravity="center"
            android:text="Being a student for "
            android:textSize="14dp"
            />
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_light_italic"
                android:gravity="center"

                android:text="1"
                android:textSize="14dp"
                />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_light_italic"
                android:gravity="center"
                android:text=" days ago"
                android:textSize="14dp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/certificate"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/shapeshadow"
            android:elevation="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/useremail">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/icon_certification"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/icon_certification" />

                    <TextView
                        android:id="@+id/certificates"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="9dp"
                        android:layout_toEndOf="@+id/icon_certification"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="My Certificates"
                        android:textColor="#374957"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/redirect" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ourcommunity"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shapeshadow"
            android:elevation="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/certificate">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/icon_community"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:src="@drawable/icon_community" />

                    <TextView
                        android:id="@+id/community"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="9dp"
                        android:layout_toEndOf="@+id/icon_community"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="Our community"
                        android:textColor="#374957"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/redirect" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aboutus"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shapeshadow"
            android:elevation="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ourcommunity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/icon_aboutus"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:src="@drawable/icon_aboutus" />

                    <TextView
                        android:id="@+id/about_us"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="9dp"
                        android:layout_toEndOf="@+id/icon_aboutus"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="About us"
                        android:textColor="#374957"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"

                        android:layout_marginEnd="20dp"

                        android:src="@drawable/redirect" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shapeshadow"
            android:elevation="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutus">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/icon_logout"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="3dp"
                        android:src="@drawable/icon_logout" />

                    <TextView
                        android:id="@+id/logoutt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="9dp"
                        android:layout_toEndOf="@+id/icon_logout"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="Log out"
                        android:textColor="#374957"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="214dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/redirect" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>